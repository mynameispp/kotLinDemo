<?xml version="1.0" encoding="utf-8"?>
<com.ffzxnet.testkotlin.swipe_layout.SwipeToLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:swipe_style="classic">

    <include
        android:id="@id/swipe_refresh_header"
        layout="@layout/item_list_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

    <include
        android:id="@id/swipe_load_more_footer"
        layout="@layout/item_list_footer" />

</com.ffzxnet.testkotlin.swipe_layout.SwipeToLoadLayout>